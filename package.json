{
	"name": "scablanders",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "rm -rf public/client && vite build",
		"deploy": "wrangler deploy",
		"deploy:staging": "wrangler deploy --env staging",
		"test": "vitest run --config vitest.config.ts",
		"test:watch": "vitest --config vitest.config.ts",
		"lint": "eslint . --ext .ts,.js",
		"format": "prettier --write .",
		"cf-typegen": "wrangler types",
		"drifters:recompute-stats": "node scripts/build-drifters.js --recompute-stats"
	},
	"dependencies": {
		"@cloudflare/vite-plugin": "^1.11.5",
		"@wagmi/connectors": "^5.9.3",
		"@wagmi/core": "^2.19.0",
		"alchemy-sdk": "^3.6.3",
		"commander": "^14.0.0",
		"dotenv": "^17.2.1",
		"ethers": "^6.15.0",
		"hono": "^4.9.2",
		"phaser": "^3.90.0",
		"sharp": "^0.34.3",
		"siwe": "^3.0.0",
		"uuid": "^11.1.0",
		"viem": "^2.33.3",
		"vite": "^7.1.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/node": "^22.1.0",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.42.0",
		"@typescript-eslint/parser": "^8.42.0",
		"eslint": "^9.8.0",
		"prettier": "^3.3.3",
		"typescript": "^5.5.2",
		"vite-plugin-static-copy": "^3.1.1",
		"vitest": "^3.2.4",
		"wrangler": "^4.30.0"
	}
}
